{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft": "Debug",
      "Microsoft.AspNetCore": "Debug",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },

  "Fido2": {
    "ServerDomain": "localhost",
    "Origins": [ "https://localhost:7001" ]
  },

  "SAML2": {
    "CertificatesPath": "-",
    "CertificatePassword": "-",

    "IDP": {
      "CertificateValidationMode": "None"
    },

    "RelyingParties": [
      {
        "EntityId": "https://localhost:7002/saml2/",
        "MetadataUrl": "https://localhost:7002/saml2/metadata"
      }
    ]
  },

  "OpenTelemetry": {
    "AzureMonitor": {
      "ConnectionString": "secret"
    },
    "ServiceNamespace": "Passkey",
    "ServiceName": "PasskeyServer",
    "UseMeter": {
      "MeterName": "passkey.server.meter",
      "MeterVersion": "1.0.0"
    }
  }
}
